<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!--drawer-->
    <style name="drawer_header_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/drawer_header_text</item>
    </style>

    <!--profile screen-->
    <style name="profile_subheader">
        <item name="android:background">@color/profile_subheader_bg</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">@dimen/profile_subheader_vertical_padding</item>
        <item name="android:paddingTop">@dimen/profile_subheader_vertical_padding</item>
    </style>

    <style name="profile_subheader_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="profile_subheader_divider">
        <item name="android:background">@color/profile_subheader_divider</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="profile_subheader_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_larger_22</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="profile_subheader_text.subtext">
        <item name="android:textSize">@dimen/font_normal_15</item>
    </style>

    <style name="profile_item">
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingRight">@dimen/spacing_medium_32</item>
        <item name="android:paddingLeft">@dimen/spacing_normal_16</item>
        <item name="android:paddingTop">@dimen/spacing_small_8</item>
        <item name="android:paddingBottom">@dimen/spacing_small_8</item>
    </style>

    <style name="profile_item_text_input">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">@dimen/spacing_medium_32</item>
        <item name="android:paddingRight">@dimen/spacing_normal_16</item>
        <item name="android:paddingTop">@dimen/spacing_normal_16</item>
        <item name="android:paddingBottom">@dimen/spacing_normal_16</item>
    </style>

    <style name="profile_item_text_input_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/profile_item_text</item>
        <item name="android:textColorHint">@color/profile_item_text_hint</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:paddingTop">@dimen/spacing_small_8</item>
    </style>

    <style name="profile_item_icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
    </style>

    <style name="profile_item_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">@dimen/spacing_larger_72</item>
        <item name="android:background">@color/profile_item_divider</item>
    </style>
</resources>
